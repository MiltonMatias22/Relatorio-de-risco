<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".View.View_04_registrar_risco">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/txt_nome_do_risco"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/txt_nome_do_risco_fisico"
                    android:id="@+id/txt_titulo_risco"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_tipo_agentes_causadores_risco"
                android:padding="10dp"
                android:lines="4"
                android:minLines="3"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:gravity="bottom|left"
                android:scrollbars="vertical"
                android:hint="Agentes Causadores do Risco"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/txt_grau_do_risco"
                android:id="@+id/textView13"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edt_grau_risco"
                    android:hint="Selecionar Grau"
                    android:enabled="false"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="#ededed">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/btn_escolher_grau_risco"
                        android:background="@drawable/ic_arrow_drop_down_24dp" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_recomendacoes_risco"
                android:padding="10dp"
                android:lines="4"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:minLines="3"
                android:gravity="bottom|left"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"
                android:hint="EPI/EPC/Recomendações"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_salvar"
                android:id="@+id/btn_salvar_risco"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="#000000" />

            </LinearLayout>
    </ScrollView>
</LinearLayout>
